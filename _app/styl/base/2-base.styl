*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: SUD
	font-weight: 300
	color #000
	background-color #fff
	line-height: 1.5
	@media screen and (min-width 2295px)
		font-size: 20px
.container
	width 100%
	max-width 1230px
	// padding 0
	margin: 0 auto;
	position relative
	@media screen and (min-width 2295px)
		max-width 1400px
	// @media screen and (min-width 1200px)
	// 	width: 1170px;
	// @media screen and (min-width 992px)
	// 	width: 970px;
	// @media screen and (min-width 768px)
	// 	width: 750px;
.content
	position relative
	z-index 50
.wrapper
	overflow hidden
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display inline-block
	position relative
	z-index 90
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	padding 15px 50px
	font-size: 24px
	background: #3A38DC;
	border: 1px solid #3A38DC;
	border-radius: 2px
	transition: all .3s ease
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
		background-color: #1A17EA;
		border: 1px solid #1A17EA;
	&-wrapper-center
		text-align center
	img
		display inline-block
		margin-left: 15px
	@media screen and (max-width 767px)
		font-size: 20px
	@media screen and (max-width 385px)
		font-size: 18px
		padding 15px 30px
		line-height: 1.2
.circle
	position absolute
	border-radius: 50%
	z-index 1
	&-blue
		background-color: #F3F3FD;
	&-bordered
		border: 1px solid #9B9B9B;
.general-title
	font-size: 36px
	font-weight: bold
	margin-bottom: 40px
	@media screen and (max-width 767px)
		font-size: 30px
	@media screen and (max-width 560px)
		font-size: 26px
		margin-bottom: 30px
	@media screen and (max-width 560px)
		margin-bottom: 25px
	@media screen and (max-width 385px)
		font-size: 24px
	&-center
		text-align center
.general-text
	font-size: 24px
	@media screen and (max-width 767px)
		font-size: 20px
	@media screen and (max-width 560px)
		font-size: 18px
.general-list
	li
		list-style: none
	&-1
		li
			position relative
			margin-bottom: 25px
			padding-left: 39px
			font-size: 24px
			&:last-child
				margin-bottom: 0
			&:before
				content: ''
				display block
				position absolute
				top 17px
				left 0
				width 17px
				height 3px
				background-color: #3D36DB;
			span
				font-weight: 600
			@media screen and (max-width 767px)
				font-size: 20px
				margin-bottom: 20px
				padding-left: 30px
				&:before
					top 15px
			@media screen and (max-width 560px)
				font-size: 18px
				margin-bottom: 15px