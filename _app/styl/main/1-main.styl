#main
	padding 0 0 100px
	@media screen and (max-width 991px)
		text-align center
	@media screen and (max-width 767px)
		padding 0 0 60px
	@media screen and (max-width 385px)
		padding 0 0 40px
.main
	&-pre
		font-size: 15px
	&-title
		font-size: 36px
		font-weight: bold
		margin 10px 0 20px
		span
			display inline-block
			color: #3A38DC
		@media screen and (max-width 767px)
			font-size: 30px
		@media screen and (max-width 560px)
			font-size: 26px
			margin 5px 0 10px
	&-subtitle
		font-size: 24px
		margin-bottom: 30px
		@media screen and (max-width 767px)
			font-size: 20px
		@media screen and (max-width 560px)
			margin-bottom: 20px
	&-info
		font-size: 20px
		font-weight: 500
		margin-bottom: 10px
		&:last-of-type
			margin-bottom: 20px
		span
			font-weight: 300
			display inline-block
			&.date
				color: #3A38DC
		@media screen and (max-width 767px)
			font-size: 18px
.form
	position relative
	z-index 30
.form-title
	font-size: 15px
	margin-bottom: 10px
.input
	background-color: transparent
	display inline-block
	border: 1px solid #A8A8A8;
	border-radius: 2px;
	color: #D0D0D0;;
	font-size: 18px;
	font-weight: normal;
	padding 15px 25px
	transition: all .3s ease
	width 100%
	max-width 300px
	&-mail-main
		float left
		@media screen and (max-width 1200px)
			float: none
			display block
			margin 0 auto 10px 0
		@media screen and (max-width 991px)
			margin 0 auto 10px
	::-webkit-input-placeholder
	::-moz-placeholder
	:-moz-placeholder
	:-ms-input-placeholder
		color:#D0D0D0;
		opacity:1;
.button-form-main
	float right
	max-width 300px
	padding 10px 20px 11px
	@media screen and (min-width 2295px)
		width 100%
	@media screen and (max-width 1200px)
		display block
		float: none
		margin 0
		width 100%
	@media screen and (max-width 991px)
		margin 0 auto
@-webkit-keyframes autofill
	to
		font-size: 18px
		color: #D0D0D0;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.input:active
input:-internal-autofill-selected
	background-color: transparent !important
.alert-message
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 600
	line-height: 1
.checking
	display: table;
	width 100%
	max-width 410px
	margin: 5px auto 0
	text-align: left
	&-main
		margin-left: 0
		@media screen and (max-width 991px)
			margin-left: auto
	@media screen and (max-width 560px)
		max-width 300px
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .12)
	100%
		box-shadow: 0 0 15px 10px rgba(red, .12)
.checking .check-label
	line-height: 27px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 30px;
	text-align: left;
	font-size: 12px
	color #5c5b5b
	@media screen and (max-width 560px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #5c5b5b
	&:focus
		border-bottom: 1px dashed
		color #5c5b5b
	&:hover
		border-bottom: none
		text-decoration: none
		color #5c5b5b
.checking .check-label:before
	content: '';
	background-color: red;
	position: absolute;
	left: 0;
	top: 3px;
	width: 20px;
	height: 20px;
	border none
	border-radius: 2px
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 6px;
	top: -10px;
	width: 8px;
	height: 14px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: #3A38DC
	animation: none
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
