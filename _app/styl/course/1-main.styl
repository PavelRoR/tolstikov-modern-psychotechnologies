#main
	padding 0 0 100px
	@media screen and (max-width 991px)
		text-align center
	@media screen and (max-width 767px)
		padding 0 0 60px
	@media screen and (max-width 385px)
		padding 0 0 40px
.main
	&-pre
		font-size: 24px
		margin-top: 20px
	&-title
		font-size: 36px
		font-weight: bold
		margin 10px 0 20px
		span
			display inline-block
			color: #3A38DC
		@media screen and (max-width 767px)
			font-size: 30px
		@media screen and (max-width 560px)
			font-size: 26px
			margin 5px 0 10px
	&-subtitle
		font-size: 24px
		margin-bottom: 30px
		@media screen and (max-width 767px)
			font-size: 20px
		@media screen and (max-width 560px)
			margin-bottom: 20px
	&-info
		font-size: 20px
		font-weight: 500
		margin-bottom: 10px
		&:last-of-type
			margin-bottom: 40px
		span
			font-weight: 300
			display inline-block
			&.date
				color: #3A38DC
		@media screen and (max-width 767px)
			font-size: 18px
	&-img
		position relative
		padding-top: 100%
		img
			position absolute
			width auto
			top -50px
			left 0