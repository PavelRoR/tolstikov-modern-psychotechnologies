.revs-slider.slick-dotted.slick-slider
.revs-slider-text.slick-dotted.slick-slider
	width 100%
	max-width 1920px
	margin 0 auto 180px
	position relative
	z-index 10
	@media screen and (max-width 991px)
		margin-top: 40px
	@media screen and (max-width 560px)
		margin-bottom: 90px
	@media screen and (max-width 385px)
		margin-bottom: 60px
	.slick-track
		padding-bottom: 20px
	.slick-center
		transform scale(1.08)
	.slick-arrow
		height 0
		width 0
		top auto
		bottom: -90px
	.slick-prev
	.slick-next
		&:before
			width 100%
			height 100%
			border-radius: 50px
			display block
			line-height: 46px
			background-color: #3A38DC
			text-align center
			color #fff
			font-size: 24px
			opacity 1
			transition: all .3s ease
			border: 1px solid #3A38DC
			font-weight: 800
		&:hover
			&:before
				background-color: transparent
				color #3A38DC
		left 43%
	.slick-next
		left auto
		right 43%
.revs-slider-text.slick-dotted.slick-slider
	.slick-track
		padding-top: 20px
		@media screen and (max-width 480px)
			padding-bottom: 45px
.slick-dots
	left 0
	text-align left
	bottom: -90px
	li
		width 40px
		height 40px
		border-radius: 50px
		border: 1px solid #3A38DC;
		transition: all .3s ease
		margin 0 10px
		overflow hidden
		@media screen and (max-width 560px)
			width 20px
			height 20px
			margin 0 5px
		button
			transition: all .3s ease
			width 100%
			height 100%
			background-color: transparent
			padding 0
			&:before
				content: none
		&.slick-active
			button
				background-color: #3A38DC;
	@media screen and (max-width 560px)
		height 200px
		width 80%
		top 0
		left: 35px
