.learn-list
	li
		list-style: none;
		font-size: 24px;
		margin-bottom: 25px;
		position: relative;
		padding-left: 30px;
		transition: all 0.3s ease;
		&:before
			content: '';
			position: absolute;
			top: 10px;
			left: 0;
			width 20px
			height: 11px
			border-left: 4px solid #000
			border-bottom: 4px solid #000
			transform: rotate(-37.41deg);
			transition: all 0.3s ease;
		&:hover
			color: #3A38DC
			&:before
				border-left: 4px solid #3A38DC
				border-bottom: 4px solid #3A38DC
		@media screen and (max-width 767px)
			font-size: 20px
			margin-bottom: 20px
			&:before
				top -3px
		@media screen and (max-width 560px)
			font-size: 18px
			margin-bottom: 15px
			padding-left: 25px