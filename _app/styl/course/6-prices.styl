.circle-prices-1
	width 180px
	height: 180px
	top -50px
	right -100px
.circle-prices-2
	width 320px
	height: 320px
	bottom: 0
	left -160px
.variants
	width 100%
	max-width 800px
	margin 0 auto
.variant
	background-color #fff
	width 100%
	max-width 350px
	margin 0 auto 35px
	border: 1px solid #3a38dc
	text-align center
	border-radius: 2px
	padding 30px 20px
	@media screen and (max-width 385px)
		padding 20px 15px
		margin-bottom: 20px
	&-head
		&-title
			font-size: 36px
			font-weight: 500
			margin-bottom: 40px
			text-transform uppercase
			color #3a38dc
			@media screen and (max-width 560px)
				font-size: 28px
				margin-bottom: 30px
			@media screen and (max-width 385px)
				font-size: 26px
				margin-bottom: 20px
	&-footer
		&-cost
			font-size: 30px
			font-weight: 500
			line-height: 1.3
			margin-bottom: 20px
			span
				display block
				font-size: 48px
				font-weight: bold
			@media screen and (max-width 560px)
				font-size: 26px
				span
					font-size: 40px
			@media screen and (max-width 385px)
				font-size: 24px
				margin-bottom: 15px
				span
					font-size: 36px
			&-full
				color #6c6c6c
				span
					text-decoration line-through
					&.unbroken
						text-decoration none
				&.unbroken
					color: #000
			&-sale
				color: red
			&-today
				color lime
				margin-bottom: 30px
		&-button
			width 100%
			max-width: 280px
.prepayment
	text-align center
	margin-bottom: 35px
	&-title
		font-size: 48px
		font-weight: bold
		color red
	&-text
		font-size: 22px
		font-weight: normal
		margin 20px 0 30px
	@media screen and (max-width 560px)
		&-title
			font-size: 40px
		&-text
			font-size: 18px
	@media screen and (max-width 385px)
		margin-bottom: 20px
		&-title
			font-size: 36px
		&-text
			margin 15px 0 20px
.timer-title
	text-align: center
	font-size: 48px
	color red
	font-weight: bold
	@media screen and (max-width 560px)
		font-size: 32px
		line-height: 1.3
	@media screen and (max-width 385px)
		font-size: 26px
.flip-clock-wrapper
	font-family: SUD
	width: 100%
	max-width 460px
	margin-top: 30px
.flip-clock-divider .flip-clock-label
	color #000
	font-weight: normal
.flip-clock-dot
	background-color: #3a38dc
	box-shadow: none
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	font-weight: bold
	background-color: #3a38dc
	text-shadow: none
	border-radius 2px
.flip-clock-wrapper ul li a div.down
	border-bottom-right-radius 2px
	border-bottom-left-radius 2px
.flip-clock-wrapper .flip
	box-shadow: none
@media screen and (max-width 560px)
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px