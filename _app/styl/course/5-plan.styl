#plan
	padding 100px 0
	@media screen and (max-width 767px)
		padding 60px 0
	@media screen and (max-width 385px)
		padding 40px 0
.module
	padding 0 0 60px
	margin 0 0 60px
	border-bottom: 1px solid #7A7A7A;
	@media screen and (max-width 991px)
		margin-bottom: 40px
		padding-bottom: 40px
	@media screen and (max-width 385px)
		margin-bottom: 30px
		padding-bottom: 30px
	&&-6
		border-bottom: 0
		// margin-bottom: 100px
	&-title
		font-size: 48px
		font-weight: 300
		position relative
		width 90%
		cursor pointer
		&:before
			content: ''
			display block
			position absolute
			width 72px
			height 72px
			top 35px
			right -10%
			cursor pointer
			border-top: 3px solid #000000;
			border-right: 3px solid #000000;
			transform: rotate(-45deg)
			transition: all .3s ease
		&:hover
			&:before
				border-top: 3px solid #3A38DC
				border-right: 3px solid #3A38DC
		&.active
			&:before
				border-top: 3px solid #3A38DC
				border-right: 3px solid #3A38DC
				transform: rotate(-225deg)
		span
			font-weight: bold
			color: #3A38DC
		small
			display block
			font-size: 24px
			font-weight: 300
			color: #6C6C6C;
		@media screen and (max-width 991px)
			font-size: 40px
			width 80%
			line-height: 1.3
			&:before
				right -20%
			small
				font-size: 20px
		@media screen and (max-width 560px)
			font-size: 32px
			&:before
				width 40px
				height: 40px
				top 20px
			small
				font-size: 18px
			span
				display block
		@media screen and (max-width 385px)
			font-size: 26px
			width 75%
			&:before
				right -30%
				top 0
			small
				font-size: 16px
	@media screen and (max-width 385px)
		&-5
			.module-title
				word-break: break-all
.general-list-module
	display none
	margin-top: 60px
	@media screen and (max-width 991px)
		margin-top: 40px
	@media screen and (max-width 385px)
		margin-top: 30px